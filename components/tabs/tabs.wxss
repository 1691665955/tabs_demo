/* components/tabs/tabs.wxss */

.tabs {
  max-width: 100vw;
  display: flex;
  flex-direction: column;
}

.tabs-header {
  max-width: 100vw;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  overflow-x: scroll;
}

.tabs-header::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.tabs-header-content {
  display: flex;
  overflow: visible;
}

.tabs-item {
  margin-left: 80rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.tabs-item:last-child {
  margin-right: 80rpx;
}

.tabs-item-name {
  font-size: 36rpx;
  height: 76rpx;
  line-height: 76rpx;
  white-space: nowrap;
}

.tabs-item-badge {
  position: absolute;
  right: -24rpx;
  top: 0rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #d31c1c;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
}

.tabs-page {
  width: 100%;
  flex: 1;
  background-color: #eeeeee;
}